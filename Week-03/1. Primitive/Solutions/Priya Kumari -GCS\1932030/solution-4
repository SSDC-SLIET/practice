#include<iostream>
using namespace std;
int main()
 {
	//code
	int t;
	cin>>t;
	while(t--)
	{
	    int n,sum,count=0;
	    cin>>n;
	    cin>>sum;
	    int a[n],i,j;
	    for(i=0;i<n;i++)
	       cin>>a[i];
	       
	      for(i=0;i<n;i++)
	          for(j=i+1;j<n;j++)
	             if(a[i]+a[j]==sum)
	                 count+=1;
	            
	        cout<<count;          
	 }
	return 0;
}
